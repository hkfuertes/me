---
import '../styles/global.css'
import TopBar from '../components/TopBar.astro';
import type { Heading } from '../utils/add-heading-ids';
import { SEO_CONFIG, getCanonicalUrl } from '@/data/seo';

interface Props {
    title: string;
    description?: string;
    showTopBar?: boolean;
    headings?: Heading[];
    image?: string;
    type?: 'website' | 'article';
    publishedTime?: Date;
    modifiedTime?: Date;
    author?: string;
    tags?: string[];
}

const { 
    title, 
    description = SEO_CONFIG.defaultDescription, 
    showTopBar = true, 
    headings = [],
    image = SEO_CONFIG.defaultImage,
    type = 'website',
    publishedTime,
    modifiedTime,
    author = SEO_CONFIG.author.name,
    tags = []
} = Astro.props;

const currentPath = Astro.url.pathname;
const canonicalUrl = getCanonicalUrl(currentPath);
const fullTitle = currentPath === '/' ? title : `${title} - ${SEO_CONFIG.siteName}`;

// Asegurar que la imagen sea absoluta
const ogImage = image.startsWith('http') ? image : `${SEO_CONFIG.siteUrl}${image}`;
---

<!DOCTYPE html>
<html lang="en" class="dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        
        <!-- SEO Meta Tags -->
        <title>{fullTitle}</title>
        <meta name="description" content={description} />
        <meta name="author" content={author} />
        <link rel="canonical" href={canonicalUrl} />
        {tags.length > 0 && <meta name="keywords" content={tags.join(', ')} />}
        
        <!-- Open Graph / Facebook -->
        <meta property="og:type" content={type} />
        <meta property="og:url" content={canonicalUrl} />
        <meta property="og:title" content={fullTitle} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImage} />
        <meta property="og:site_name" content={SEO_CONFIG.siteName} />
        <meta property="og:locale" content={SEO_CONFIG.locale} />
        {publishedTime && <meta property="article:published_time" content={publishedTime.toISOString()} />}
        {modifiedTime && <meta property="article:modified_time" content={modifiedTime.toISOString()} />}
        {author && <meta property="article:author" content={author} />}
        {tags.map(tag => <meta property="article:tag" content={tag} />)}
        
        <!-- Twitter Card -->
        <meta name="twitter:card" content={SEO_CONFIG.twitterCard} />
        <meta name="twitter:url" content={canonicalUrl} />
        <meta name="twitter:title" content={fullTitle} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />
        {SEO_CONFIG.author.twitter && <meta name="twitter:creator" content={SEO_CONFIG.author.twitter} />}
        
        <!-- Additional SEO -->
        <meta name="robots" content="index, follow" />
        <meta name="googlebot" content="index, follow" />
    </head>
    <body class="bg-dark-bg text-gray-100 min-h-screen antialiased transition-colors">
        {showTopBar && <TopBar currentPath={currentPath} headings={headings} />}
        <slot />
    </body>
</html>

<style is:global>
    html {
        scroll-behavior: smooth;
    }
</style>
