---
import '../styles/global.css'

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<html lang="es" class="dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-black text-gray-100 min-h-screen flex flex-col pb-20">
        <!-- Contenido principal -->
        <main class="flex-1 max-w-6xl mx-auto px-4 py-8 w-full">
            <slot />
        </main>

        <!-- Navegación sticky en la parte inferior -->
        <nav class="fixed bottom-0 left-0 right-0 bg-black/95 backdrop-blur border-t border-gray-800 z-50">
            <div class="max-w-6xl mx-auto px-4 py-4">
                <div class="flex items-center justify-between">
                    <!-- Logo/Nombre con foto -->
                    <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
                        <img 
                            src="/images/profile.jpeg" 
                            alt="Miguel Fuertes" 
                            class="w-12 h-12 rounded-full object-cover border-2 border-blue-400"
                        />
                        <div class="flex flex-col">
                            <span class="text-xl font-bold text-blue-400">Miguel Fuertes</span>
                            <span class="text-xs text-gray-400">Senior Software Engineer</span>
                        </div>
                    </a>
                    
                    <!-- Navegación -->
                    <ul class="flex items-center gap-6">
                        <li>
                            <a 
                                href="/" 
                                class={`hover:text-blue-400 transition-colors ${currentPath === '/' ? 'text-blue-400' : 'text-gray-300'}`}
                            >
                                About
                            </a>
                        </li>
                        <li>
                            <a 
                                href="/blog" 
                                class={`hover:text-blue-400 transition-colors ${currentPath.startsWith('/blog') ? 'text-blue-400' : 'text-gray-300'}`}
                            >
                                Blog
                            </a>
                        </li>
                        <li>
                            <a 
                                href="/Miguel_Fuertes_CV.pdf" 
                                class={`px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg transition-colors`}
                            >
                                Download
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </body>
</html>

<style>
    html {
        scroll-behavior: smooth;
    }
</style>
