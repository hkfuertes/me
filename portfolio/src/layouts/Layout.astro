---
import '../styles/global.css'

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
const isHome = currentPath === '/';
---

<html lang="es" class="dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-black text-gray-100 min-h-screen">
        <!-- Columna izquierda: Profile FIJA con position: fixed -->
        <aside class="fixed left-0 top-0 h-screen w-1/3 max-w-sm p-8 border-r border-gray-800 flex flex-col bg-black z-40">
            <!-- Foto y nombre -->
            <div class="flex-1 flex flex-col items-center justify-center mb-8">
                <img 
                    src="/images/profile.jpeg" 
                    alt="Miguel Fuertes" 
                    class="w-32 h-32 rounded-full object-cover border-4 border-blue-400 mb-4"
                />
                <h1 class="text-2xl font-bold text-blue-400 mb-2">Miguel Fuertes</h1>
                
                <!-- Bio en inglÃ©s -->
                <p class="text-sm text-gray-400 mb-6 text-center leading-relaxed">
                    Senior Software Engineer<br/>
                    <span class="text-white font-medium">Senior Software Engineer with 10+ years experience. Backend (RoR, Elixir, C# .NET), cloud (AWS, Azure), SEO/personalization platforms at Gartner, ATOS, Microsoft. Embedded systems & device hacking.</span>
                </p>
            </div>

            <!-- Botones Download (Posts solo fuera de /) -->
            <div class="mb-8 space-y-4">
                {!isHome && (
                    <a 
                        href="/"
                        class="w-full px-6 py-3 border-2 border-blue-500 hover:border-blue-600 hover:bg-blue-500 text-white font-semibold rounded-lg text-center transition-all block"
                    >
                        Posts
                    </a>
                )}
                <a 
                    href="/Miguel_Fuertes_CV.pdf"
                    target="_blank"
                    class="w-full px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg text-center transition-all block"
                >
                    Download
                </a>
            </div>
        </aside>

        <!-- Columna derecha: Contenido principal con margen izquierdo -->
        <main class="ml-[33.333%] p-4 overflow-y-auto min-h-screen">
            <slot />
        </main>
    </body>
</html>

<style>
    html {
        scroll-behavior: smooth;
    }
</style>
