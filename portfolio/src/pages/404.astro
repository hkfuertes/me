---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="404 - Page Not Found">
    <div class="min-h-screen bg-dark-bg-alt flex items-center justify-center px-6">
        <!-- Grid de fondo -->
        <div class="fixed inset-0 bg-[linear-gradient(to_right,#1a3a2408_1px,transparent_1px),linear-gradient(to_bottom,#1a3a2408_1px,transparent_1px)] bg-[size:24px_24px] pointer-events-none"></div>
        
        <div class="relative text-center max-w-2xl">
            <div class="text-9xl font-bold text-emerald-400 mb-6">404</div>
            <div class="h-1 w-20 bg-emerald-400 mx-auto mb-8"></div>
            <h1 class="text-3xl md:text-4xl font-bold text-gray-100 mb-4">Page Not Found</h1>
            <p class="text-lg text-gray-400 mb-12 font-light">
                The page you're looking for doesn't exist or has been moved.
            </p>
            <div class="flex gap-4 justify-center">
                <a 
                    href="/"
                    class="inline-flex items-center gap-2 px-6 py-3 bg-emerald-600 text-white hover:bg-emerald-700 transition-colors"
                >
                    Go Home
                </a>
                <a 
                    href="/blog"
                    class="inline-flex items-center gap-2 px-6 py-3 border border-emerald-500 text-emerald-400 hover:bg-emerald-600 hover:text-white transition-colors"
                >
                    View Blog
                </a>
            </div>
        </div>
    </div>
</BaseLayout>
