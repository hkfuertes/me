---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

// Obtener posts directamente de content/
const posts = await getCollection('posts');
const publishedPosts = posts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blog">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Blog Técnico</h1>
    
    <div class="grid md:grid-cols-2 gap-6">
      {publishedPosts.map(post => (
        <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition">
          {post.data.image && (
            <Image 
              src={`/src/content/${post.slug}/${post.data.image}`}
              alt={post.data.title}
              width={400}
              height={250}
              class="w-full h-48 object-cover"
            />
          )}
          
          <div class="p-6">
            <h2 class="text-xl font-bold mb-2">
              <a href={`/blog/${post.slug}`} class="text-blue-600 hover:text-blue-800">
                {post.data.title}
              </a>
            </h2>
            
            <p class="text-gray-700 mb-4 line-clamp-2">
              {post.data.description}
            </p>
            
            <div class="flex gap-4 text-sm text-gray-600">
              <time>{post.data.date.toLocaleDateString('es-ES')}</time>
              <span>·</span>
              <span>{Math.ceil(post.body.length / 1200)} min</span>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>
